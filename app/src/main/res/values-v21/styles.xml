<?xml version="1.0" encoding="utf-8"?>
<resources>

        <!-- Base application Theme -->
        <style name="StudyBoxTheme" parent="Theme.AppCompat.Light.DarkActionBar">
                <item name="colorPrimaryDark">@color/colorGraphite</item>
                <item name="android:statusBarColor">@color/colorGraphite</item>
                <item name="android:colorBackground">@color/colorGrey</item>
                <item name="android:windowBackground">@color/colorGrey</item>
                <item name="colorPrimary">@color/colorGraphite</item>
                <item name="colorAccent">@color/colorGraphite</item>
                <item name="android:navigationBarColor">@color/colorGraphite</item>
        </style>

        <!-- Theme with raspberry toolbar&actionbar and blue accents. -->
        <style name="StudyBoxTheme.Raspberry" parent="StudyBoxTheme">
                <item name="colorPrimary">@color/colorRaspberry</item>
                <item name="android:navigationBarColor">@color/colorRaspberry</item>
                <item name="colorAccent">@color/colorDarkBlue</item>
        </style>

        <!-- Theme with blue toolbar&actionbar and raspberry accents. -->
        <style name="StudyBoxTheme.Blue" parent="StudyBoxTheme">
                <item name="colorPrimary">@color/colorDarkBlue</item>
                <item name="android:navigationBarColor">@color/colorDarkBlue</item>
                <item name="colorAccent">@color/colorRaspberry</item>
                <item name="android:textColorPrimary">@color/colorGraphite</item>
                <item name="android:textColorPrimaryInverse">@color/colorGrey</item>
        </style>


</resources>